class Solution:
    def minMeetingRooms(self, intervals: List[List[int]]) -> int:
        
        #judge the initial status
        if not intervals:
            return 0

        
        #create a vacant list
        _rooms = []

        
        #sort the intervals
        intervals.sort(key=lambda x: x[0])
 
        
        #heapq
        heapq.heappush(_rooms, intervals[0][1])
      
        
        
        #for loop to judge the end and the start
        
        for i in intervals[1:]:
            if _rooms[0] < i[0]:
                heapq.heappop(_rooms)
            heapq.heappush(_rooms, i[1])
            
        return len(_rooms)
        
#solutionã€€2 two pointers

class Solution:
    def minMeetingRooms(self, intervals: List[List[int]]) -> int:

        if not intervals:
            return 0
        
        
        start=sorted(i[0] for i in intervals)
        end = sorted(i[1] for i in intervals)
        
        start_pointer=0
        end_pointer=0
        occupy_room=0
        
        
        
        while start_pointer<len(intervals):
           if start[start_pointer]>=end[end_pointer]:
               end_pointer+=1
               occupy_room-=1
            
            start_pointer+=1
            occupy_room+=1
